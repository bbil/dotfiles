# This is Git's per-user configuration file.
[core]
# Please adapt and uncomment the following lines:
        user = bbil
        email = blbil@uwaterloo.ca
        excludesfile = /Users/brandonbill/.gitignore_global
[user]
        name = Brandon Bil
        email = blbil@uwaterloo.ca
[push]
        default = current
[alias]
        diffc = diff --cached
        st = status -s
        ci = commit
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
        co = checkout
        cb = checkout -b
        rs = reset --soft
        rsdummy = reset --soft HEAD~1
[difftool "sourcetree"]
        cmd = opendiff \"$LOCAL\" \"$REMOTE\"
        path =
[mergetool "sourcetree"]
        cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
        trustExitCode = true
[color]
        ui = true
        branch = auto
  diff = auto
  status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
